<div class="container my-5">
    <h1>All Products</h1>
    <div class="row">
      <div class="col-12 col-md-6 col-lg-9">
        <a href="/product/create/null" class="btn btn-outline-primary">+ Create Product</a>
      </div>
      <div class="row col-lg-3 col-md-6 col-12 mt-3 mt-md-0">
        <div >
          <label for="category" class="form-label">Filter by Category</label>
        </div>
        <div > 
          <select class="form-select" name="category" id="category" >
            <option value="" <%= category ? "" : "selected" %>>All Product</option>
            <option value="Aksesoris" <%= category === "Aksesoris" ? "selected" : "" %>>Aksesoris</option>
            <option value="Baju" <%= category === "Baju" ? "selected" : "" %>>Baju</option>
            <option value="Celana" <%= category === "Celana" ? "selected" : "" %>>Celana</option>
            <option value="Jaket" <%= category === "Jaket" ? "selected" : "" %>>Jaket</option>
          </select>
        </div>
      </div>
    </div>
    <div class="row my-3">
        <% products.forEach(product => { %>
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card">
                    <div class="card-header">
                      <%= product.brand %>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title"><%= product.name %></h5>
                      <p class="card-text">Rp.<%= product.price.toLocaleString( "id-ID") %></p>
                      <a href="/products/<%= product._id %>" class="btn btn-primary">View</a>
                    </div>
                  </div>
                </div>
            <% }) %>
    </div>
</div>

<script>
  const category = document.querySelector("#category");
  category.addEventListener("change", (e) => {
    const value = e.target.value;
    window.location.href = `/products?category=${value}`
  })
</script>